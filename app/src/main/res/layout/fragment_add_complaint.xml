<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quantumcoder.moodleplus.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="40sp"
                android:id="@+id/t"
                android:layout_centerHorizontal="true"
                android:text="Add Complaint"
                android:textColor="#000"
                android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:id="@+id/c_level"
                    android:layout_centerHorizontal="true"
                    android:text="Complaint Level"
                    android:textColor="#000"
                    />
                <Spinner
                    android:id="@+id/complaint_level"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:id="@+id/c_name"
                android:layout_centerHorizontal="true"
                android:text="Complaint Type"
                android:textColor="#000"
                />
            <Spinner
                android:id="@+id/complaint_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:id="@+id/titl"
                android:layout_centerHorizontal="true"
                android:text="Title"
                android:textColor="#000"
                />


            <EditText
                android:id="@+id/title"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Add Your Title Here"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:id="@+id/des"
                android:layout_centerHorizontal="true"
                android:text="Description"
                android:textColor="#000"
                />
            <EditText
                android:id="@+id/description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:hint="Add Description Here"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
            />





            <Button
                android:id="@+id/add_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
